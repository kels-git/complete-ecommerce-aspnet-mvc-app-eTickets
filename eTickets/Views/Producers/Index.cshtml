@model IEnumerable<Producer>


@{
    ViewData["Title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle"><img class="rounded-circle" src="@item.ProfilePictureURL" width="100" height="100"/></td>
                        <td class="align-middle">@item.FullName</td>
                        <td class="align-middle">@item.Bio</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i> </a> |
                            <a class="btn btn-outline-success"> <i class="bi bi-eye"></i> </a> |
                            <a class="btn btn-outline-danger"> <i class="bi bi-trash"></i> </a> |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>