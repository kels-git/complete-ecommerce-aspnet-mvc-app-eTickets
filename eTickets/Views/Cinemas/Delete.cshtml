@model Cinema


@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="text-center">
        <p class="text-center mb-3"><h1>Delete Confirmation for @Model.Name</h1></p>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
       
                    <div class="form-group text-center">
                    <img class="border-info rounded-circle" src="" style="max-width: 150px;" id="logoPicturePreview" />
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Logo" class="form-label"></label>
                        <input asp-for="Logo" class="form-control" readonly/>
                       
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" readonly />

                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id"/>
                         <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('logoPicturePreview');
            output.src = $("#Logo").val();
        })
    </script>
}
