@model IEnumerable<Cinema>


@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle"><img class="rounded-circle" src="@item.Logo" width="100" height="100" /></td>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.Description</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square">Edit</i> </a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash">Delete</i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div style="position:fixed; right: 55px; bottom: 85px;" class="text-white">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"> Add New</i>
    </a>
</div>