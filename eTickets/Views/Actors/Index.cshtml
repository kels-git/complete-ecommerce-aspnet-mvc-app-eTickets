@*define the model*@
 @model IEnumerable<Actor>


@*define viewData*@
@{
    ViewData["Title"] = "List of Actors";
}

@*write code*@
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName) </th>
                    <th> @Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                                <img src="@item.ProfilePictureURL" class="rounded-circle" alt="@item.FullName" width="100" height="100"/>
                        </td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Bio)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ActorId"> <i class="bi bi-pencil-square">Edit</i> </a> |
                            <a class="btn btn-outline-info"  asp-action="Details" asp-route-id="@item.ActorId"> <i class="bi bi-eye">View</i> </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ActorId"> <i class="bi bi-trash">Delete</i> </a> |
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


 <div style="position:fixed; right: 55px; bottom: 85px;"  class="text-white">
     <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
         <i class="bi bi-plus-circle"> Add New</i>
         </a>
  </div>